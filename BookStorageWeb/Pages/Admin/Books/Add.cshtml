    <div class="container">
        <h1>Dodaj pozycję</h1>
    </div>
</div>


<div>
    <div class="container">
       <form method="post">

        <div class="mb-3">
                <label for="Title" class="form-label">Tytuł</label>
                <input type="text" class="form-control" id="Title" asp-for="AddBookRequest.Title">
        </div>

            <div class="mb-3">
                <label for="Author" class="form-label">Autor</label>
                <input type="text" class="form-control" id="Author" asp-for="AddBookRequest.Author">
            </div>

            <div class="mb-3">
                <label for="Type" class="form-label">Rodzaj</label>
                <input type="text" class="form-control" id="Type" asp-for="AddBookRequest.Type">
            </div>

        <div class="mb-3">
                <label for="Description" class="form-label">Opis</label>
                <textarea type="text" class="form-control" id="Description" asp-for="AddBookRequest.Description"></textarea>
        </div>

        <div class="mb-3">
                <label for="SerialNumber" class="form-label">Numer Seryjny</label>
                <input type="text" class="form-control" id="SerialNumber" asp-for="AddBookRequest.SerialNumber">
        </div>
            <div class="mb-3">
                <label for="Location" class="form-label">Lokalizacja</label>
                <input type="text" class="form-control" id="Location" asp-for="AddBookRequest.Location">
            </div>

        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Zapisz</button>
        </div>
       </form>
    </div>
</div>

